<br><br><br><br><br><br><br><br><br>

<%= link_to "Redirect from here", @user.cross_site_scripting %>

<h2><%= raw @post.title %></h2>
<p><%= @post.body %></p>

<hr>
<%= link_to "Edit", edit_post_path(@post), :class => 'btn btn-info' %>
<%= link_to "Delete", post_path(@post), 
			method: :delete,
			data: {confirm: 'Are you fuckin sure?'},
			:class => 'btn btn-danger' %>


<br><br>

<h3>Comments</h3>

<% @post.comments.each do |comm| %>
	<div class="well">
		<p><strong><%= comm.username %></strong>: <%= comm.body %></p>
	</div>
<% end %>

<hr>

<h3>Add Comment</h3>
<%= form_for([@post, @post.comments.build]) do |f| %>
	<p>
		<%= f.label :username %><br>
		<%= f.text_field(:username, {:class => 'form-control'}) %>
	</p>

	<p>
		<%= f.label :body %><br>
		<%= f.text_field(:body, {:class => 'form-control'}) %>
	</p>

	<%= f.submit({:class => 'btn btn-info'})%>
<% end %>